<Window x:Class="IISLogsToExcel.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderThickness="1"
         BorderBrush="{StaticResource ControlEnabled}">
        <DockPanel>
            <Grid Background="{StaticResource ControlEnabled}" DockPanel.Dock="Top" >
                <TextBlock Name="AppTitle" FontWeight="DemiBold" Margin="0, 0, 0, 2" Text="Window" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" />
                <Button Name="closeDlg" Content="X" Width="18" HorizontalAlignment="Right" 
                        VerticalAlignment="Top" Margin="0,0,0,2" Click="No_Click" ToolTip="Close"
                        FontWeight="DemiBold" Style="{DynamicResource RoundedButton}" 
                        Background="Red"/>
            </Grid>
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Image Name="dlgImage" Height="48" Width="48" HorizontalAlignment="Left" Source="/res/info.png" />
                    <TextBlock Name="Message" Text="" Margin="5,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="Auto" />
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Name="yesButton" Content="Yes" Height="20" Width="60" Margin="5" Click="Yes_Click" Grid.Column="0" 
                        HorizontalAlignment="Left" FontWeight="DemiBold" Style="{DynamicResource RoundedButton}" 
                        Background="{StaticResource ControlEnabled}"/>
                    <Button Name ="closeButton" Content="Close" Height="20" Width="60" Margin="5" Click="No_Click" Grid.Column="1"
                        HorizontalAlignment="Center" FontWeight="DemiBold" Style="{DynamicResource RoundedButton}" 
                        Background="{StaticResource ControlEnabled}"/>
                    <Button Name ="noButton" Content="No" Height="20" Width="60" Margin="5" Click="No_Click" Grid.Column="2" 
                        HorizontalAlignment="Right" FontWeight="DemiBold" Style="{DynamicResource RoundedButton}" 
                        Background="{StaticResource ControlEnabled}"/>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
